<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.tec9ers.thunderstorm.view.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_favCities"
            app:destination="@id/nav_fav_cities" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.tec9ers.thunderstorm.view.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_favCities"
            app:destination="@id/nav_fav_cities" />
    </fragment>

    <fragment
        android:id="@+id/nav_fav_cities"
        android:name="com.tec9ers.thunderstorm.view.fragment.FavCities"
        android:label="fragment_fav_cities"
        tools:layout="@layout/fragment_fav_cities" >
        <action
            android:id="@+id/action_favCities_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

</navigation>