<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="72dp"
    android:layout_height="149dp"
    android:background="@drawable/hourly_forecast"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_forecast_hourly_temp"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        android:textColor="@color/hourly_forecast_rv_item_content"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="29Â°C" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_forecast_hourly_thumbnail"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_wb_sunny_rv_item" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_forecast_hourly_desc"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/hourly_forecast_rv_item_content"
        android:textSize="12sp"
        tools:text="Broken Clouds"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_forecast_hourly_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        android:textColor="@color/hourly_forecast_rv_item_content"
        android:textSize="14sp"
        tools:text="10:00\nAM" />

</LinearLayout>
